{
  "title": "Graph format capabilities",
  "type": "object",
  "properties": {
    "id": {
      "description": "locally unique identifier of the graph format",
      "type": "string"
    },
    "name": {
      "description": "Name of the graph format",
      "type": "string"
    },
    "direction": {
      "enum": ["directed", "undirected", "uniform", "mixed", "multi"]
    },
    "graphAttributes": { "type": "boolean" },
    "nodeAttributes": { "type": "boolean" },
    "edgeAttributes": { "type": "boolean" },
    "visualAttributes": { "type": "boolean" },
    "nodeTypes": {
      "$ref": "#/$defs/cardinality"
    },
    "edgeTypes": {
      "$ref": "#/$defs/cardinality"
    },
    "nodeLabels": {
      "description": "Special field to name an individual node",
      "$ref": "#/$defs/cardinality"
    },
    "edgeLabels": {
      "description": "Special field to name an individual edge",
      "$ref": "#/$defs/cardinality"
    },
    "hierarchy": {
      "description": "Are subgraphs expressible and if so, can a node have multiple parents?",
      "enum": [ false, true, "multi" ]
    },
    "hyperEdges": {
      "type": "boolean"
    },
    "datatypes": {
      "enum": [ false, true, "JSON scalars" ]
    }
  },
  "additionalProperties": false,
  "$defs": {
    "cardinality": {
      "enum": [ false, "1", "0/1", "+", "*" ]
    }
  }
}
